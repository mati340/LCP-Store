@model LCPStore.Models.Contact

@{
    ViewData["Title"] = "Contact Us";
}

<!-- Page info -->
<div class="page-top-info">
    <div class="container">
        <h4>Contact</h4>
        <div class="site-pagination">
            <a asp-action="Index" asp-controller="Home">Home</a> /
            <a asp-action="Contact">Contact</a>
        </div>
    </div>
</div>
<!-- Page info end -->
<!-- Contact section -->
<section class="contact-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 contact-info">
                <h3>Get in touch</h3>
                <p>Elie Wiesel St 2, Rishon LeZion</p>
                <p>+546 990221 123</p>
                <p>support@LCP.com</p>
                <p>Go to our Facebook page</p>
                <div class="contact-social">
                        <a href="https://www.facebook.com/יוסי-סרור-העמוד-הרשמי-314341605272549"><i class="fa fa-facebook"></i></a>
                
                </div>
                <form class="contact-form" id="contactForm" name="sentMessage">
                    <input type="text" id="Name" placeholder="Your name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <input type="text" id="Email" placeholder="Your e-mail">
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <input type="text" id="Subject" placeholder="Subject">
                    <span asp-validation-for="Subject" class="text-danger"></span>
                    <textarea placeholder="Message" id="Body"></textarea>
                    <span asp-validation-for="Body" class="text-danger"></span>
                    <div id="success"></div>
                    <button id="sendMessageButton" type="submit" class="site-btn">SEND NOW</button>
                </form>
            </div>
        </div>
    </div>
    <div class="map"><iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3384.674062629024!2d34.77497588517665!3d31.96973798122318!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1502b3f5eb44e1c1%3A0xfbe9b8c6bce59319!2z15TXnteh15zXldecINeU15DXp9eT157XmSDXlNee15vXnNec15Qg15zXnteZ16DXlNec!5e0!3m2!1siw!2sil!4v1602577125864!5m2!1siw!2sil" style="border:0" allowfullscreen></iframe></div>
</section>
<!-- Contact section end -->

@section Scripts {
    <script src="~/js/Contact/ContactUs.js"></script>
}