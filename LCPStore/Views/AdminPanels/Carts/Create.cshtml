@model LCPStore.Models.Cart

@{
    Layout = "_Layout_AdminPanel";
    ViewData["Title"] = "Create";
}

<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-4 user-data p-b-30">
                    <h1 class="title-5 m-b-35">Create Cart</h1>
                    <form asp-action="CartCreate">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label class="control-label">Account</label>
                            <select asp-for="AccountId" class="form-control" asp-items="ViewBag.Accounts"></select>
                            <span>@TempData["CartError"]</span>

                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                    <div>
                        <a asp-action="Tables">Back to List</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
