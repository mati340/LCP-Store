@model LCPStore.Models.Cart

@{
    Layout = "_Layout_AdminPanel";
    ViewData["Title"] = "Details";
}

<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="col-md-6 user-data p-b-30">
                <h1 class="title-5 m-b-35">Cart Details</h1>
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Account)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Account.Id)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.CartItems)
                    </dt>
                    <dd class="col-sm-10">
                        <table class="table">
                            <tr>
                                <th>Product ID</th>
                                <th>Quantity</th>
                                <th>Total Price</th>
                            </tr>
                            @foreach (var item in Model.CartItems)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Product.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Quantity)
                                    </td>                                    
                                    <td>
                                        $@Html.DisplayFor(modelItem => item.TotalPrice),00
                                    </td>
                                    <td>
                                        <div class="table-data-feature">
                                            <button class="item" data-toggle="tooltip" data-placement="top" title="Edit" onclick="location.href='@Url.Action("CartItemEdit", "AdminPanels", new { item.Id })'">
                                                <i class="zmdi zmdi-edit"></i>
                                            </button>
                                            <button class="item" data-toggle="tooltip" data-placement="top" title="Delete" onclick="location.href='@Url.Action("CartItemDelete", "AdminPanels", new { item.Id })'">
                                                <i class="zmdi zmdi-delete"></i>
                                            </button>
                                            <button class="item" data-toggle="tooltip" data-placement="top" title="Details" onclick="location.href='@Url.Action("CartItemDetails", "AdminPanels", new { item.Id })'">
                                                <i class="zmdi zmdi-more"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </table>
                    </dd>
                </dl>
                <div>
                    <a asp-action="CartEdit" asp-route-id="@Model.Id">Edit</a> |
                    <a asp-action="Tables">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
